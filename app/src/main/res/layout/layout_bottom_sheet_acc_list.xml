<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottomSheetContainer"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_acc_list">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Accounts"
        android:fontFamily="@font/goldman"
        android:textSize="16dp"
        android:textFontWeight="700"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:id="@+id/ll_acc_list_show"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:padding="10dp"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/white"
            android:paddingLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="Madushan"
            android:gravity="left|center"
            android:shadowColor="@color/black" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape"
            android:paddingLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="Thakshila"
            android:gravity="left|center"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape"
            android:paddingLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="Muthuni"
            android:gravity="left|center"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape"
            android:paddingLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="Prasanna"
            android:gravity="left|center"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnAddAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:text="Add Account"
        android:textColor="@color/white"
        android:textFontWeight="900"
        android:background="@drawable/button_add_acc"/>

</LinearLayout>